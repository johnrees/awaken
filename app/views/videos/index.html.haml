.holder
  .left
  .polaroid
    .box
    .top
    .side
    .image
    .side
    .text
      %p
        %span.kind Kind:
        %span.name Name
      %p
        %span.client Client:
        %span.client_name Client
  .right

  %ul#video-thumbs
    - @videos.each_with_index do |video, index|
      %li.thumb
        = link_to video, data: { kind: video.kind, name: video.name, client: video.client, video: video.video, poster: video.poster } do
          = image_tag video.thumbnail

.hide
  #video-modal
    %video#video.video-js.vjs-default-skin{:controls => "", "data-setup" => "{}", :height => "405", :preload => "auto", :width => "720"}
