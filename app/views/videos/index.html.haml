#popup
  #video-modal
    #pages
      - Page.all.each do |page|
        %div{id: page.permalink}
          %h1= page.name
          = page.content.html_safe

    %video#video.video-js.vjs-default-skin{:controls => "", :poster => "", :preload => "auto"}
      / %source{src: "", type: "video/mp4"}
      / %source{src: "", type: "video/webm"}
      / %source{src: "", type: "video/ogg"}
= link_to "Close", "#", id: 'close'



.holder
  .left.bar

  .polaroid
    .box
    .top
    .side
    .image
    .side
    .text
      %p
        %span.kind Kind:
        %span.name Name
      %p
        %span.client Client:
        %span.client_name Client
  .right.bar

  %ul#video-thumbs
    - 1.times do
      - @videos.each_with_index do |video, index|
        %li.thumb
          = link_to video, data: { kind: video.kind, name: video.name, client: video.client, video: video.video, poster: video.poster } do
            = image_tag video.thumbnail

