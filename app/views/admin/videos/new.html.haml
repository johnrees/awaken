.row
  .large-12.columns
    %h2 Upload new Video
    #video_attachment

    = form_for [:admin,@video], validate: true do |f|
      %fieldset
        %legend Video Details
        .row
          .large-6.columns
            = f.label :kind
            = f.text_field :kind, placeholder: "e.g. Advert, Viral"
          .large-6.columns
            = f.label :name
            = f.text_field :name
        .row
          .large-12.columns
            = f.label :client
            = f.text_field :client

      %fieldset
        %legend Video File
        = f.file_field :attachment
      = f.submit "Add Video", class: 'button'
