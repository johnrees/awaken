#manage-videos
  .row
    .large-12.columns
      %h1 Manage Videos
      / %input.search{placeholder: 'Search...'}
      / %span.sort.button.small.secondary{ data: { sort: "name" } } Sort by Name
      / %span.sort.button.small.secondary{ data: { sort: "id" } } Sort by Date Added

  .row
    .large-8.columns
      %h4 Published Videos
      / %p.hint
      /   This is the archive of every video uploaded. In order for videos to be added to the frontpage, change the settings on the
      /   = link_to 'Edit Order of Videos', edit_order_admin_videos_path
      /   page
      #published.video-list
        %ul#published-videos.list{data: { url: sort_admin_videos_url }}
          = render Video.published

    .large-4.columns
      %h4 Inactive Videos
      #unpublished.video-list
        %ul#unpublished-videos.list{data: { url: sort_admin_videos_url }}
          = render Video.unpublished
