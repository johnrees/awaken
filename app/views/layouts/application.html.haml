!!!
%html
  %head
    %title James Rouse | Director
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / = stylesheet_link_tag    "http://vjs.zencdn.net/4.0/video-js.css"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Open+Sans:600,400,300"
    = stylesheet_link_tag    "application", :media => "all"
    / = javascript_include_tag "http://vjs.zencdn.net/4.0/video.js"
    = javascript_include_tag "application.js"
  %body
    #outer-wrapper
      #overlay
      #container
        %header
          = link_to root_url do
            = image_tag "rouse.png", id: 'logo'
          %p#job James Rouse - Director
        #main
          .inner= yield
        %footer
          %nav
            %ul
              %li= link_to "Awards", page_path("awards"), data: { popup: true }
              %li= link_to "Biography", page_path("biography"), data: { popup: true }
              %li= link_to "Contact", page_path("contact"), data: { popup: true }
